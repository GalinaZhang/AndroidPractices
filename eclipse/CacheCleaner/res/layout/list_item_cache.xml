<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <CheckBox 
        android:id="@+id/cache_list_item_recommandCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:padding="4dp" />
    
    <TextView 
        android:id="@+id/cache_list_item_packageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/cache_list_item_recommandCheckBox"
        android:text="@string/null_string" />
    
    <TextView 
        android:id="@+id/cache_list_item_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cache_list_item_packageName"
        android:layout_toLeftOf="@id/cache_list_item_recommandCheckBox"
        android:text="@string/null_string" />

</RelativeLayout>
